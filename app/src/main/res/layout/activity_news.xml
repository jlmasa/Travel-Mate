<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_google_signin_btn_text_light_pressed"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:onClick="sports"
                android:scaleType="fitCenter"
                android:src="@drawable/sportsnews"
                android:text="PH SPORTS NEWS" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPORTS NEWS"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="130dp"
            android:layout_height="130dp">

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:onClick="health"
                android:scaleType="fitCenter"
                android:src="@drawable/health"
                android:text="PH HEALTH NEWS" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEALTH NEWS"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:onClick="business"
                android:scaleType="fitCenter"
                android:src="@drawable/business"
                android:text="PH BUSINESS NEWS" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUSINESS NEWS"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:onClick="Entertainment"
                android:scaleType="fitCenter"
                android:src="@drawable/entertainment"
                android:text="PH ENTERTAINMENT NEWS" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTERTAINMENT NEWS"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="18sp" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>